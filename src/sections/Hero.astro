---
import { Image } from "astro:assets";
import { ArrowDown, ArrowRight } from "@lucide/astro";
import Badge from "@/components/ui/starwind/badge";
---

<header class="text-center mt-30 animate-blurred-fade-in" id="home">
  <section class="relative">
    <div
      class="absolute top-0 left-0 right-0 h-10 bg-gradient-to-b from-white to-transparent z-30"
    >
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-r from-teal-500/20 to-blue-500/20 z-0"
    >
    </div>
    <!-- <div class="absolute inset-0 pattern-bg-large z-0"></div> -->
    <div class="z-10 py-20 md:py-32 lg:py-40">
      <div
        class="grid grid-cols-1 md:grid-cols-2 gap-4 lg:gap-11 items-center max-w-6xl mx-auto"
      >
        <div class="space-y-6 text-left p-6">
          <Badge
            class="px-3 py-1 text-sm bg-teal-200 text-teal-900 rounded-full"
          >
            Professional Cleaning Services
          </Badge>
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight capitalize text-pretty"
          >
            We Transform Spaces With <span
              class="bg-gradient-primary bg-clip-text text-transparent text-5xl md:text-7xl"
              >Impeccable Cleanliness</span
            >
          </h1>
          <p class="text-lg md:text-xl text-slate-600 max-w-xl">
            First-class residential and commercial cleaning services.
          </p>
          <div class="flex items-center gap-4">
            <a
              href="/contact"
              class="flex text-base font-medium items-center gap-2 bg-gradient-primary rounded-xl px-4 py-2 text-white hover:brightness-75 transition-all duration-200 hover:translate-x-2"
            >
              Get a Quote
              <ArrowRight size={20} />
            </a>
            <a
              href="/#services"
              class="flex text-base font-medium items-center gap-2 hover:bg-teal-800 px-4 py-2 text-teal-800 hover:text-white transition-colors duration-200 rounded-xl"
            >
              View Services
              <ArrowDown size={20} />
            </a>
          </div>
        </div>
        <div class="relative p-5">
          <div
            class="md:absolute -inset-4 bg-gradient-to-r from-teal-500/30 to-blue-500/30 rounded-2xl blur-xl opacity-70"
          >
          </div>
          <div class="relative rounded-2xl overflow-hidden shadow-xl">
            <Image
              src="/LOGO.webp"
              alt="Servicio de limpieza profesional"
              width={400}
              height={400}
              loading="eager"
              decoding="async"
              class="w-full h-auto object-cover rounded-2xl"
            />
          </div>
        </div>
      </div>
    </div>
    <div
      class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-t from-white to-transparent"
    >
    </div>
  </section>
</header>
